.container {
	width: 100%;
	height: 100vh;
	/* background: linear-gradient(127.9deg,rgba(217,235,255,1),rgba(203,237,255,1)); */
	text-align: center;
	color: #646f7c;
}

.top-box {
	width: 100%;
	position: relative
}
.top-box image {
	width: 100%;
}
.top-box .logo {
	width: 170rpx;
	height: 170rpx;
	position: absolute;
	top: 320rpx;
	left: 290rpx;
}
.top-box .text {
	margin-top: 45rpx;
	font-size: 42rpx;
}


.title {
	font-size: 38rpx;
	color: #00203c;
	font-family: PingFangSC-Medium;
	line-height: 56rpx;
	margin-top: 100rpx;
	margin-bottom: 42rpx;
}
.desc {
	font-size: 28rpx;
	letter-spacing: 4rpx;
	line-height: 36rpx;
	font-family: PingFangSC-Regular;
	margin-bottom: 20rpx;
}
.agreement {
	font-size: 24rpx;
	font-family: PingFangSC-Regular;
	position: absolute;
	bottom: 50rpx;
}
.slogon {
	font-size: 28rpx;
	letter-spacing: 4rpx; 
	font-family: PingFangSC-Regular;
	position: absolute;
	bottom: 92rpx;
}

.phone {
	width: 100rpx;
	height: 100rpx;
	position: fixed;
	bottom: 300rpx;
	right: 50rpx;
}

