<!--pages/appointment/appointment.wxml-->
<view>
<input placeholder="请输入预约人数" auto-focus />
<button size='mini'>预约</button>
</view>
<view class="table">
  <view class="tr bg-w">
    <view class="th">预约ID</view>
    <view class="th">预约人数</view>
    <view class="th ">需等待人数</view>
    <view class="th">预约状态</view>
    <view class="th ">创建时间</view>
  </view>
  <block wx:for="{{listData}}" wx:key="{{code}}">
    <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
      <view class="td">{{item.id}}</view>
      <view class="td">{{item.personNumber}}</view>
      <view class="td">{{item.needWait}}</view>
      <view class="td">{{item.stateDesc}}</view>
      <view class="td">{{item.createTime}}</view>
    </view>
    <view class="tr" wx:else>
      <view class="td">{{item.id}}</view>
      <view class="td">{{item.personNumber}}</view>
      <view class="td">{{item.needWait}}</view>
      <view class="td">{{item.stateDesc}}</view>
      <view class="td">{{item.createTime}}</view>
    </view>
  </block>
</view>
